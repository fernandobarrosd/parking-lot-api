// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Vehicle {
  licensePlace  String          @id
  type          String // Motocycle or Car
  vehicleRented VehicleRented[]
}

model VehicleRented {
  id                  String  @id @default(uuid())
  vehicleLicensePlace String
  vehicle             Vehicle @relation(fields: [vehicleLicensePlace], references: [licensePlace])
  hours               Int
  price               Float
}


